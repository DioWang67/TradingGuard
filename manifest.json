{
  "manifest_version": 3,
  "name": "TradingGuard",
  "version": "3.6.0",
  "description": "更快速的通用型交易日誌與風控計算機。支援所有網頁，懸浮視窗隨處紀錄、自動截圖。",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {},
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ]
}